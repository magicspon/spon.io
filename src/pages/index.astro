<style>

	:root {
		--angle: 294deg
	}

	.spon {
		-webkit-background-clip: text;
  	-webkit-text-fill-color: transparent;
		background-image: linear-gradient(
			var(--angle),
			hsl(330, 100%, 45.1%) 0%,
			hsl(330.39, 78.74%, 49.09%) 8.4%,
			hsl(328.14, 69.81%, 50.06%) 15.5%,
			hsl(324.73, 63.17%, 50.4%) 21.4%,
			hsl(320.04, 56.08%, 50.34%) 26.5%,
			hsl(313.65, 48.79%, 49.93%) 31%,
			hsl(304.79, 42.31%, 49.23%) 35.2%,
			hsl(292.85, 39.58%, 50.58%) 39.3%,
			hsl(280.71, 42.89%, 53.41%) 43.5%,
			hsl(268.79, 46.44%, 56.06%) 48.2%,
			hsl(257.04, 50.21%, 58.52%) 53.6%,
			hsl(245.36, 54.14%, 60.78%) 60%,
			hsl(234.18, 60.62%, 60.51%) 67.5%,
			hsl(225.7, 68.33%, 57.8%) 76.5%,
			hsl(218.85, 75.04%, 54.16%) 87.3%,
			hsl(210, 100%, 45.1%) 100%
		);
	}

	.spon--reverse {
		--angle: 45deg;
	}

</style>